<syncfusion:ChromelessWindow x:Class="EQAudioTriggers.Views.TriggerEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        xmlns:local="clr-namespace:EQAudioTriggers.Views"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        CornerRadius="8"
        ResizeMode="NoResize"
        skin:SfSkinManager.VisualStyle="Office2019Black"
        Icon="/Images/Oxygen-Icons.org-Oxygen-Actions-document-edit.ico"
        Title="Trigger Editor" Height="770" Width="700" Name="triggereditor">
    <Window.Resources>
        <local:InverterConverter x:Key="InverterConverter"/>
    </Window.Resources>
    <StackPanel>
        <Grid>
            <GroupBox Name="groupboxGeneral" Header="General Settings" Margin="10,10,10,10">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                            <RowDefinition />
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Name="labelName" Content="Trigger Name" HorizontalAlignment="Left"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="textboxName" HorizontalAlignment="Center" MinWidth="280" Text="{Binding EQTrigger.Name}"/>

                        <Label Grid.Row="2" Grid.Column="0" Name="labelSearch" Content="Search Text" HorizontalAlignment="Left"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="textboxSearch" HorizontalAlignment="Center" MinWidth="280" Text="{Binding EQTrigger.SearchText}"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                            <CheckBox Grid.Row="4" Grid.Column="0" Name="checkboxRegex" Content="Use Regular Expressions" IsChecked="{Binding EQTrigger.UseRegex}"/>
                            <CheckBox Margin="10,0,0,0" Grid.Row="6" Name="checkboxFast" Content="Use Fast Check" IsEnabled="{Binding EQTrigger.UseRegex}" IsChecked="{Binding EQTrigger.FastCheck}"/>
                        </StackPanel>
                        <Label Grid.Row="8" Grid.Column="0" Name="labelCategory" Content="Category" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="8" Grid.Column="1" Name="comboCategory" ItemsSource="{Binding Categories}" SelectedValue="{Binding EQTrigger.Category, Mode=TwoWay}" SelectedValuePath="CategoryName">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding CategoryName}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Label Grid.Row="10" Grid.Column="0" Name="labelComments" Content="Comments" HorizontalAlignment="Left"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Name="textboxComments" TextWrapping="Wrap" Height="110" Text="{Binding EQTrigger.Comments}"/>
                        <GroupBox Margin="5" Header="Trigger Activation" Grid.RowSpan="10" Grid.Column="2">
                            <StackPanel Margin="5">
                                <CheckBox x:Name="checkboxGlobal" Content="Global" IsChecked="{Binding EQTrigger.Global}" HorizontalAlignment="Left"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" IsEnabled="{Binding EQTrigger.Global, Converter={StaticResource InverterConverter}}">
                                    <Label Content="Active Zone"/>
                                    <TextBox x:Name="txtActiveZone" Width="175" Text="{Binding EQTrigger.ActiveZone}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Margin="10,0,10,10">
            <TabControl Name="tabcontrolBasic" BorderThickness="2">
                <TabItem Name="tabBasic" Header="Basic">
                    <StackPanel>
                        <GroupBox Name="groupTextSetting" Header="Text Settings">
                            <StackPanel>
                                <Grid Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="5"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Row="0" Grid.Column="0" Name="checkboxBasicDisplay"  Content="Display Text" IsChecked="{Binding EQTrigger.UseBasicText}" HorizontalAlignment="Left"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Name="textboxBasicDisplay" HorizontalAlignment="Center" Width="400" IsEnabled="{Binding EQTrigger.UseBasicText}" Text="{Binding EQTrigger.BasicText}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="0" Name="checkboxBasicClipboard" Content="Clipboard Text" IsChecked="{Binding EQTrigger.UseClipboardText}" HorizontalAlignment="Left"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Name="textboxBasicClipboard" HorizontalAlignment="Center" Width="400" IsEnabled="{Binding EQTrigger.UseClipboardText}" Text="{Binding EQTrigger.ClipboardText}"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Name="groupAudioSettings" Header="Audio Settings">
                            <StackPanel>
                                <Grid Margin="0,10,0,0">
                                    <RadioButton Name="radioBasicNoSound" Content="No Sound" IsChecked="{Binding EQTrigger.RadioBasicNoSound}" GroupName="BasicAudio"/>
                                </Grid>
                                <StackPanel>
                                    <RadioButton Margin="0,10,0,0" Name="radioBasicTTS" Content="Use Text To Speech" IsChecked="{Binding EQTrigger.RadioBasicTTS}" GroupName="BasicAudio"/>
                                    <StackPanel Margin="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="5"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Margin="40,0,0,0" Name="labelBasicTTS" Content="Text to Say" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.RadioBasicTTS}"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,0" Name="textboxBasicTTS" HorizontalAlignment="Center" Width="400" IsEnabled="{Binding EQTrigger.RadioBasicTTS}" Text="{Binding EQTrigger.BasicTTS}"/>
                                            <CheckBox Grid.Row="2" Grid.Column="1" Name="checkboxBasicInterrupt" IsChecked="{Binding EQTrigger.UseBasicInterrupt}" Content="Interrupt Speech" IsEnabled="{Binding EQTrigger.RadioBasicTTS}" Grid.ColumnSpan="2"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel>
                                    <RadioButton Margin="0,5,0,0" Name="radioBasicPlay" IsChecked="{Binding EQTrigger.RadioBasicPlay}" Content="Play Sound File" GroupName="BasicAudio" />
                                    <StackPanel Margin="5">
                                        <Grid Margin="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Margin="40,0,0,0" Name="labelBasicSoundFile" Content="Sound File" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.RadioBasicPlay}"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Name="textboxBasicSoundFile" HorizontalAlignment="Center" Width="400" Text="{Binding EQTrigger.BasicPlayFile}" IsEnabled="{Binding EQTrigger.RadioBasicPlay}"/>
                                            <Button Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Name="buttonBasicSoundFile" Width="30" Content=". . ." IsEnabled="{Binding EQTrigger.RadioBasicPlay}" Click="buttonBasicSoundFile_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Grid Margin="74,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelBasicTest" Content="Test" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=radioBasicNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" Name="comboBasicTest" Width="120" HorizontalAlignment="Center" ItemsSource="{Binding Characters}"
                                                  IsEnabled="{Binding ElementName=radioBasicNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"
                                                  DisplayMemberPath="Name" SelectedIndex="0"/>
                                        <Button Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Name="buttonBasicTest" Content="Play" Width="60" HorizontalAlignment="Right" Click="buttonBasicTest_Click" IsEnabled="{Binding ElementName=radioBasicNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem Name="tabTimer" Header="Timer">
                    <StackPanel>
                        <StackPanel Margin="5">
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Name="labelTimerType" Content="Timer Type:" HorizontalAlignment="Left"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="comboTimerType" Width="160" HorizontalAlignment="Left" Text="{Binding EQTrigger.TimerType, Mode=TwoWay}" SelectionChanged="comboTimerType_SelectionChanged" >
                                    <ComboBoxItem Name="NoTimer" Content="No Timer" IsSelected="True"/>
                                    <ComboBoxItem Name="Timer" Content="Timer(Count Down)"/>
                                    <ComboBoxItem Name="Stopwatch" Content="Stopwatch(Count Up)"/>
                                    <ComboBoxItem Name="RepeatingTimer" Content="Repeating Timer"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                        <StackPanel>
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="54.626"/>
                                    <ColumnDefinition Width="235.374"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Name="labelTimerName" Content="Timer Name:" HorizontalAlignment="Center" IsEnabled="False"/>
                                <TextBox Grid.Row="0" Name="textboxTimerName" Text="{Binding EQTrigger.TimerName}" HorizontalAlignment="Left" Width="290" IsEnabled="False" Grid.ColumnSpan="3" Margin="79,0,0,0"/>
                            </Grid>
                        </StackPanel>
                        <Grid Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Name="labelTimerDuration" Content="Timer Duration:" HorizontalAlignment="Left" IsEnabled="False"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="textboxTimerHours" VerticalAlignment="Center" Text="{Binding EQTrigger.TimerHours}" Width="30" IsEnabled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Name="labelTimerHours" Content="Hours" IsEnabled="False"/>
                            <TextBox Grid.Row="0" Grid.Column="3" Name="textboxTimerMinutes" VerticalAlignment="Center" Text="{Binding EQTrigger.TimerMinutes}" Width="30" IsEnabled="False"/>
                            <Label Grid.Row="0" Grid.Column="4" Name="labelTimerMinutes" Content="Minutes" IsEnabled="False"/>
                            <TextBox Grid.Row="0" Grid.Column="5" Name="textboxTimerSeconds" VerticalAlignment="Center" Text="{Binding EQTrigger.TimerSeconds}" Width="30" IsEnabled="False"/>
                            <Label Grid.Row="0" Grid.Column="6" Name="labelTimerSeconds" Content="Seconds" IsEnabled="False"/>
                        </Grid>
                        <Grid Margin="0,30,0,0">
                            <Label Grid.Row="0" Grid.Column="0" Name="labelTimerTriggered" Content="If timer is already running when triggered again:" IsEnabled="False"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" Name="comboTriggered" Width="120" SelectedItem="{Binding EQTrigger.TimerTriggered}">
                                <ComboBoxItem Name="newtimer" Content="Start a new timer"/>
                                <ComboBoxItem Name="restarttimer" Content="Restart Current Timer"/>
                                <ComboBoxItem Name="nothing" Content="Do nothing" IsSelected="True"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Label Name="labelEarlyText" Content="End early text (for multiple possible values, add a row for each):" IsEnabled="False"/>
                        </Grid>
                        <Grid>
                            <DataGrid Name="datagridEarly" ItemsSource="{Binding EQTrigger.EndEarlyTriggers}" Height="200" IsEnabled="False"/>
                        </Grid>
                    </StackPanel>
                </TabItem>
                <TabItem Name="tabEnding" Header="Timer Ending" IsEnabled="false">
                    <StackPanel Margin="5">
                        <StackPanel>
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Row="0" Grid.Column="0" Name="checkboxEndingNotify" Content="Notify when timer is down to:" IsChecked="{Binding EQTrigger.EndingNotify}" VerticalAlignment="Center" Unchecked="checkboxEndingNotify_Unchecked"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" Name="textboxEndingHours" VerticalAlignment="Center" Text="{Binding EQTrigger.EndingHours}" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <Label Grid.Row="0" Grid.Column="2" Name="labelEndingHours" Content="Hours" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <TextBox Grid.Row="0" Grid.Column="3" Name="textboxEndingMinutes" Text="{Binding EQTrigger.EndingMinutes}" VerticalAlignment="Center" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <Label Grid.Row="0" Grid.Column="4" Name="labelEndingMinutes" Content="Minutes" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <TextBox Grid.Row="0" Grid.Column="5" Name="textboxEndingSeconds" Text="{Binding EQTrigger.EndingSeconds}" VerticalAlignment="Center" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <Label Grid.Row="0" Grid.Column="6" Name="labelEndingSeconds" Content="Seconds" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                            </Grid>
                        </StackPanel>
                        <GroupBox Name="groupEndingTextSetting" Header="Text Settings">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="5"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Row="0" Grid.Column="0" Name="checkboxEndingDisplay" Content="Display Text" IsChecked="{Binding EQTrigger.UseEndingText}" HorizontalAlignment="Left"  IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                    <TextBox Margin="5,0,0,0" Grid.Row="0" Grid.Column="1" Name="textboxEndingDisplay" HorizontalAlignment="Center" Width="400" IsEnabled="{Binding ElementName=checkboxEndingDisplay,Path=IsChecked}" Text="{Binding EQTrigger.EndingText}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="0" Name="checkboxEndingClipboard" Content="Clipboard Text" IsChecked="{Binding EQTrigger.UseEndingClipboard}" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                    <TextBox Margin="5,0,0,0" Grid.Row="2" Grid.Column="1" Name="textboxEndingClipboard" HorizontalAlignment="Center" Width="400" IsEnabled="{Binding ElementName=checkboxEndingClipboard,Path=IsChecked}"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Name="groupEndingAudioSettings" Header="Audio Settings" Margin="0,5,0,0">
                            <StackPanel Margin="5">
                                <RadioButton Name="radioEndingNoSound" Content="No Sound" IsChecked="{Binding EQTrigger.RadioEndingNoSound}" GroupName="EndingAudio" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                <StackPanel>
                                    <RadioButton Margin="0,5,0,0" Name="radioEndingTTS" Content="Use Text To Speech" IsChecked="{Binding EQTrigger.RadioEndingTTS}" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}" GroupName="EndingAudio"/>
                                    <Grid Margin="20,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="5"/>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelEndingTTS" Content="Text to Say" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.RadioEndingTTS}"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="textboxEndingTTS" HorizontalAlignment="Center" Width="400" Text="{Binding EQTrigger.EndingTTS}" IsEnabled="{Binding EQTrigger.RadioEndingTTS}" />
                                        <CheckBox Grid.Row="2" Grid.Column="1" Name="checkboxEndingInterrupt" IsChecked="{Binding EQTrigger.EndingInterrupt}" Content="Interrupt Speech" IsEnabled="{Binding EQTrigger.RadioEndingTTS}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel>
                                    <RadioButton Margin="0,5,0,0" Name="radioEndingPlay" IsChecked="{Binding EQTrigger.RadioEndingSound}" Content="Play Sound File" GroupName="EndingAudio" IsEnabled="{Binding ElementName=checkboxEndingNotify,Path=IsChecked}"/>
                                    <Grid Margin="20,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelEndingSoundFile" Content="Sound File" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.RadioEndingSound}"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="textboxEndingSoundFile" HorizontalAlignment="Center" Width="350" Text="{Binding EQTrigger.EndingSoundFile}" IsEnabled="{Binding EQTrigger.RadioEndingSound}"/>
                                        <Button Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Name="buttonEndingSoundFile" Width="30" Content=". . ." IsEnabled="{Binding EQTrigger.RadioEndingSound}" Click="buttonEndingSoundFile_Click"/>
                                    </Grid>
                                </StackPanel>
                                <Grid Margin="0,15,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Name="labelEndingTest" Content="Test:" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=radioEndingNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" Name="comboEndingTest" Width="130" HorizontalAlignment="Center" ItemsSource="{Binding Characters}"
                                              IsEnabled="{Binding ElementName=radioEndingNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"
                                              DisplayMemberPath="Name" SelectedIndex="0"/>
                                    <Button Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Name="buttonEndingTest" Content="Play" Width="60" HorizontalAlignment="Right" IsEnabled="{Binding ElementName=radioEndingNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}" Click="buttonEndingTest_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem Name="tabEnded" Header="Timer Ended" IsEnabled="false">
                    <StackPanel Margin="5">
                        <CheckBox Name="checkboxEndedNotify" Margin="0,5,0,0" Content="Notify when timer ends" IsChecked="{Binding EQTrigger.EndedNotify}" VerticalAlignment="Center" Unchecked="checkboxEndedNotify_Unchecked"/>
                        <GroupBox Margin="0,5,0,0" Name="groupEndedTextSetting" Header="Text Settings">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Row="0" Grid.Column="0" Name="checkboxEndedDisplay" Content="Display Text" IsChecked="{Binding EQTrigger.UseEndedText}" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.EndedNotify}"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" Name="textboxEndedDisplay" HorizontalAlignment="Left" Width="400" Text="{Binding EQTrigger.EndedDisplayText}" IsEnabled="{Binding EQTrigger.UseEndedText}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="0" Name="checkboxEndedClipboard" Content="Clipboard Text" IsChecked="{Binding EQTrigger.UseEndedClipboard}" HorizontalAlignment="Left" IsEnabled="{Binding EQTrigger.EndedNotify}"/>
                                    <TextBox Grid.Row="2"  Grid.Column="1" Margin="5,0,0,0" Name="textboxEndedClipboard" HorizontalAlignment="Left" Width="400" Text="{Binding EQTrigger.EndedClipboard}" IsEnabled="{Binding EQTrigger.UseEndedClipboard}"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Name="groupEndedAudioSettings" Header="Audio Settings" Margin="0,5,0,0">
                            <StackPanel Margin="5">
                                <RadioButton Name="radioEndedNoSound" Content="No Sound" IsChecked="True" IsEnabled="{Binding EQTrigger.EndedNotify}" GroupName="EndedAudio"/>
                                <StackPanel>
                                    <RadioButton Margin="0,5,0,0" Name="radioEndedTTS" Content="Use Text To Speech" IsChecked="False" IsEnabled="{Binding ElementName=checkboxEndedNotify, Path=IsChecked}" GroupName="EndedAudio"/>
                                    <Grid Margin="20,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelEndedTTS" Content="Text to Say" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=radioEndedTTS,Path=IsChecked}"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="textboxEndedTTS" HorizontalAlignment="Center" Width="400" Text="{Binding EQTrigger.EndedTTS}" IsEnabled="{Binding ElementName=radioEndedTTS,Path=IsChecked}"/>
                                        <CheckBox Grid.Row="2" Grid.Column="1" Name="checkboxEndedInterrupt" IsChecked="{Binding EQTrigger.EndedInterrupt}" Content="Interrupt Speech" IsEnabled="{Binding ElementName=radioEndedTTS,Path=IsChecked}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel>
                                    <RadioButton Margin="0,5,0,0" Name="radioEndedPlay" IsChecked="False" Content="Play Sound File" IsEnabled="{Binding ElementName=checkboxEndedNotify, Path=IsChecked}" GroupName="EndedAudio"/>
                                    <Grid Margin="20,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelEndedSoundFile" Content="Sound File" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=radioEndedPlay, Path=IsChecked}"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="textboxEndedSoundFile" HorizontalAlignment="Center" Width="350" Text="{Binding EQTrigger.EndedSoundFile}" IsEnabled="{Binding ElementName=radioEndedPlay,Path=IsChecked}"/>
                                        <Button Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Name="buttonEndedSoundFile" Width="30" Content=". . ." IsEnabled="{Binding ElementName=radioEndedPlay,Path=IsChecked}" Click="buttonEndedSoundFile_Click"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel>
                                    <Grid Margin="0,20,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Name="labelEndedTest" Content="Test:" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=radioEndedNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" Name="comboEndedTest" Width="130" HorizontalAlignment="Center" ItemsSource="{Binding Characters}"
                                                  IsEnabled="{Binding ElementName=radioEndedNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}"
                                                  DisplayMemberPath="Name" SelectedIndex="0"/>
                                        <Button Margin="5,0,0,0" Grid.Row="0" Grid.Column="2" Name="buttonEndedTest" Content="Play" Width="60" HorizontalAlignment="Right" IsEnabled="{Binding ElementName=radioEndedNoSound, Path=IsChecked, Converter={StaticResource InverterConverter}}" Click="buttonEndedTest_Click"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem Name="tabCounter" Header="Counter">
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Name="checkboxCounterNotify" Content="Reset counter if unmatched for:" IsChecked="{Binding EQTrigger.CounterReset}" VerticalAlignment="Center" Unchecked="checkboxCounterNotify_Unchecked"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" Name="textboxCounterHours" Text="{Binding EQTrigger.ResetHours}" VerticalAlignment="Center" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxCounterNotify, Path=IsChecked}"/>
                            <Label Grid.Row="0" Grid.Column="2" Name="labelCounterHours" Content="Hours" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="3" Name="textboxCounterMinutes" Text="{Binding EQTrigger.ResetMinutes}" VerticalAlignment="Center" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxCounterNotify, Path=IsChecked}"/>
                            <Label Grid.Row="0" Grid.Column="4" Name="labelCounterMinutes" Content="Minutes" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="5" Name="textboxCounterSeconds" Text="{Binding EQTrigger.ResetSeconds}" VerticalAlignment="Center" Width="40" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=checkboxCounterNotify, Path=IsChecked}"/>
                            <Label Grid.Row="0" Grid.Column="6" Name="labelCounterSeconds" Content="Seconds"  HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Margin="0,10,0,0" VerticalAlignment="Bottom">
            <Button Name="buttonTimerSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,85,0" Width="60" Click="buttonTimerSave_Click"/>
            <Button Name="buttonTimerCancel" Content="Cancel" HorizontalAlignment="Right" Width="60" Margin="0,0,10,0" IsCancel="True" Click="buttonTimerCancel_Click" />
        </Grid>
    </StackPanel>
</syncfusion:ChromelessWindow>
